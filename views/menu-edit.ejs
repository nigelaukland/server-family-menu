<%-include('includes/head.ejs')%> 
<%-include('includes/navigation.ejs')%>

<div class="ui container">
  <div class="ui raised segment">
    <form class="ui form" action="/menu/edit %>" method="POST">
      <div class="field">
        <label>Menu Name</label>
        <input
          type="text" 
          name="name" 
          placeholder="<%= menu.name %>" />
      </div>
      <div class="field">
        <label>Start Date</label>
        <input
          type="date"
          name="startDate"
          placeholder="<%= menu.startDate %>"
        />
      </div>
      <div class="field">
        <label>dayMenu1</label>
        <input
          type="string"
          name="dayMenu1"
          placeholder="<%= (typeof menu.meals[0] === 'undefined') ? '' : menu.meals[0] %>"
        />
      </div>
      <div class="field">
        <label>dayMenu2</label>
        <input
          type="string"
          name="dayMenu2"
          placeholder="<%= (typeof menu.meals[1] === 'undefined') ? '' : menu.meals[1] %>"
        />
      </div>
      <input type="hidden" value="<%= menu._id %>" name="_id">
      <button class="ui teal button" type="submit">Update</button>
      <a href="/menu/deleteMenu/" class="ui basic teal button">Delete</a>
    </form>
  </div>
</div>

<%-include('includes/end.ejs')%>
